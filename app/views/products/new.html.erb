<%= form_with scope: :product, url: products_path, local: true do |form| %> 
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %></br>
  </div>
  <div>
    <%= form.label :price %><br>
    <%= form.text_field :price %></br>
  </div>
    <%= form.label :image %><br>
    <%= form.file_field :image, accept: 'image/png, image/gif, image/jpeg, image/jpg'%></br>
  </div>
    <%= form.label :category_id %><br>
    <%= form.select :category_id, options_for_select(Category.all.map{|b| [b.name, b.id]}) %><br>
   </div>
  <p>
    <%= form.submit %>
  </p>
<% end %>