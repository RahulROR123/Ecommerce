
<h3>pay for orders</h3>
 <br>
   <body class="bg-dark">
  <div class="container" style="max-width: 45%;">
    <div class="card text-center" >
     <div class="card-body ">
      <h5 class=" text-center">Please pay for order </h5><br>
      <button id = "rzp-button1" class="btn btn-outline-secondary ">Pay Now</button>
      <script src = "https://checkout.razorpay.com/v1/checkout.js"></script>
      <script>
      var options = {
        "key": "rzp_test_wrYixxsZmgVEj5",
        "order_id": "<%= @order.razorpay_order_id %>",
        "id": "<%= @order.id %>",
        "name": "Acme Corp.",
        "currency": "INR",
        "image": "/your_logo.jpg",
        "callback_url": "/orders/<%= @order.id%>/update_order",
        "prefill": {
         "amount": "<%= @order.total_price %>"  
        },
        "theme": {
          "color": "#F37254"
        }
      };
        var rzp1 = new Razorpay(options);
        document.getElementById('rzp-button1').onclick = function(e) {
          rzp1.open();
          e.preventDefault();
        }
    </script>
  </div>
 </div>
</body>


    